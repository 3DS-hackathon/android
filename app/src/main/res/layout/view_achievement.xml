<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:id="@+id/cardAchievement"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:background="?attr/selectableItemBackground"
        app:cardBackgroundColor="@android:color/white"
        app:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_toLeftOf="@+id/picAchievement">

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/achievementNameTextView"
                    style="@style/TextAppearance.AppCompat.Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:textColor="@android:color/black"
                    app:typeface="roboto_medium"
                    tools:text="Бонус за продажу"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

                <com.devspark.robototextview.widget.RobotoTextView
                    android:id="@+id/achievementDescTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/achievementNameTextView"
                    android:ellipsize="end"
                    android:maxLines="8"
                    android:textColor="@android:color/black"
                    app:typeface="roboto_regular"
                    tools:text="Постоянный бонус" />


            </RelativeLayout>

            <ImageView
                android:id="@+id/picAchievement"
                android:layout_width="92dp"
                android:layout_height="152dp"
                android:layout_gravity="right"
                android:src="@drawable/logo"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:scaleType="fitXY" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>